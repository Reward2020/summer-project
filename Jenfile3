pipeline {
    agent any
    environment {
        DOCKER_IMAGE_NAME = "anatoliihruchaniuk/pet-clinic-image"
		registryCredential = "dockerhub"
    }
    stages {
        stage('Build') {
            steps {
                echo 'Running build automation'
                sh './mvnw package'
            }
        }
        
        stage('Build Docker Image') {
            steps {
                script {
                    app = docker.build("$DOCKER_IMAGE_NAME")
                    app.inside {
                        sh 'echo $(curl localhost:8080)'
                    }
                }
            }
        }
        stage('Push Docker Image') {
            steps {
                script {
                    docker.withRegistry('https://registry.hub.docker.com', registryCredential) {
                        app.push("${env.BUILD_NUMBER}")
                        app.push("latest")
                    }
                }
            }
        }
        stage('Deploy To Stage-Server') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'id_cred_prod', usernameVariable: 'USERNAME', passwordVariable: 'USERPASS')]) {
                    
					  //  sh ("sshpass -p 'USERPASS' ssh -o StrictHostKeyChecking=no $USERNAME@34.221.19.255 \"docker pull $DOCKER_IMAGE_NAME:${env.BUILD_NUMBER}\"")
                      // sh ''						
                        sh ("sshpass -p 'USERPASS' ssh -o StrictHostKeyChecking=no $USERNAME@34.221.19.255 \"docker run -d --rm --name spring-petclinic -p 8080:8080 $DOCKER_IMAGE_NAME:${env.BUILD_NUMBER}\"")
                    
                }
            }
        }
    }
}