pipeline {
    agent any
    stages {
	    stage("Checkout"){
            steps{
            git branch: 'main', url: 'https://github.com/Reward2020/summer-project.git'
            }
        }
        stage ("Build") {
            steps {
			    sh "mvn -version"
				sh 'cd /var/lib/jenkins/workspace/Pipeline'
				sh './mvnw spring-boot-maven-plugin:run'
				junit '**/target/surefire-reports/TEST-*.xml'
			}	
        }
    }
	post {
	  always {
	    cleanWs()
	  }
	}
}
