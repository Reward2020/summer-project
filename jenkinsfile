pipeline {
    agent {
	  docker{
	  image "maven:3.6.0-jdk-8"
	  label "docker"
	  args "-v /tmp/maven:/home/jenkins/.m2 -e MAVEN_CONFIG=/home/jenkins/.m2"
	  }
	
	}
    stages {
        stage ("Build") {
            steps {
			    sh "mvn -version"
                sh "env && ./mvnw clean package"
				// sh "mvn -Dmaven.test.failure=tru clean package"
            }
        }
    }
	post {
	  always {
	    cleanWs()
	  }
	}
}
