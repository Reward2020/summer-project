pipeline {
    agent any
    stages {
        stage ('Checkout') {
          steps {
            git 'https://github.com/Reward2020/summer-project.git'
          }
        }
        stage('Build') {
            agent { docker 'maven:3.6-alpine' }
            steps {
                sh 'mvn clean package'
                junit '**/target/surefire-reports/TEST-*.xml'
                archiveArtifacts artifacts: 'target/*.jar', fingerprint: true
            }
        }
        stage('Deploy') {
          steps {
            input 'Do you approve the deployment?'
            sh 'scp target/*.jar jenkins1@34.221.19.255:/opt/pet/'
            sh "ssh jenkins1@34.221.19.255 'nohup java -jar /opt/pet/spring-petclinic-1.5.1.jar &'"
          }
        }
    }
}
